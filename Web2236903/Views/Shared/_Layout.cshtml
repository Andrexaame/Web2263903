<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-fixed-top bg-primary">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Web.Net 2.0", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            CRUD'S
                            <span class="glyphicon glyphicon-fire" aria-hidden="true"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Usuario", "Index", "usuario")</li>
                            <li>@Html.ActionLink("Usuario_Roles", "Index", "usuarioroles")</li>
                            <li>@Html.ActionLink("Roles", "Index", "roles")</li>
                            <li>@Html.ActionLink("Clientes", "Index", "clientes")</li>
                            <li>@Html.ActionLink("Compra", "Index", "compra")</li>
                            <li>@Html.ActionLink("Producto", "Index", "producto")</li>
                            <li>@Html.ActionLink("Producto_Compra", "Index", "productocompra")</li>
                            <li>@Html.ActionLink("Producto_Imagen", "Index", "productoimagen")</li>
                            <li>@Html.ActionLink("Proveedor", "Index", "proveedor")</li>
                        </ul>
                    </li>
                     <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            CUSTOME
                            <span class="glyphicon glyphicon-apple" aria-hidden="true"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Reserva", "Reserva", "producto")</li>
                            <li>@Html.ActionLink("Detalles", "Detalles", "compra")</li>
                        </ul>
                    </li>
                        @if(User.Identity.IsAuthenticated)
                         {
                            <li>@Html.ActionLink("Cerrar Sesion", "CloseSession", "Usuario")</li>
                         }
                    </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Dev. By: Txaame</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
