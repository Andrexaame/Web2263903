@model IEnumerable<Web2236903.Models.compra>

@{
    ViewBag.Title = "Index";
}

<h2>Lista Compra</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Fecha
        </th>
        <th>
            Total
        </th>
        <th>
            Usuario
        </th>
        <th>
            Cliente
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.total)
            </td>
            <td>
                @Web2236903.Controllers.CompraController.NombreUsuario(item.id_usuario)
            </td>
            <td>
                @Web2236903.Controllers.CompraController.NombreCliente(item.id_cliente)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.id }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.id }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.id }, new { @class = "listDelete" })
            </td>
        </tr>
    }

</table>

@section scripts{
    <script>
        $(".listDelete").click(function (event) {
            if (!confirm(" ¿Esta seguro de eliminar?")) {
                event.preventDefault();
            }
        })
    </script>
}
